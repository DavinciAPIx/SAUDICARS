{
  "expo": {
    "name": "SaudiDrive",
    "slug": "saudidrive-p2p-rental",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "saudidrive",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D9265"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan your driver's license and upload car photos.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to find nearby available cars.",
        "NSPhotoLibraryUsageDescription": "This app requires access to your photo library to upload car photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0D9265"
      },
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-location",
      "expo-camera",
      "expo-image-picker",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}